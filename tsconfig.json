{
    "compilerOptions": {
        "module": "ES2015",
        "declaration": true,
        "moduleResolution": "Node",
        "removeComments": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "skipLibCheck": true,
        "incremental": true
    }
}